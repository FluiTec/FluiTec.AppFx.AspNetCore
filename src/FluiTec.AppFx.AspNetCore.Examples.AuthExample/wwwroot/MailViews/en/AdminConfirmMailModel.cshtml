@inherits RazorLight.TemplatePage<FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Mail.AdminConfirmMailModel>
<html>
@{ await IncludeAsync("/Shared/_Style.cshtml", Model); }
<body>
<p></p>
<table width="700" align="center" cellspacing="0" cellpadding="15" style="background: #fff; border: 1px #808080 solid;">
    <tr>
        <td>
            <p style="color: #e0555a; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 20px; text-align: center;">@Model.ApplicationName</p>
        </td>
    </tr>
    <tr>
        <td style="background-color: #646464; border-bottom: 5px #646464 solid; border-top: 5px #646464 solid; padding: 10px;">
            <p style="color: #FFFFFF; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 18px; font-weight: bold;" align="center">@Model.Header</p>
            <p style="color: #FFFFFF; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 14px; font-weight: bold;" align="center">
                <i>Please confirm this account</i>
            </p>
        </td>
    </tr>
    <tr>
        <td>
            <p style="color: #435058; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px;">
                Hi,<br/>
                right now, a user created a new account on @Model.ApplicationName that needs to be confirmed.
            </p>
        </td>
    </tr>
    <tr>
        <td>
            <p style="color: #435058; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px;">
                In case you want to confirm the account immediately - please click on the following link:<br />
                <a href="@Model.ValidationUrl">Confirm account right now</a>
            </p>
        </td>
    </tr>
    <tr>
        <td>
            <p style="color: #435058; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px;">
                If you need to make a few settings before confirming the account - please click on the following link:<br />
                <a href="@Model.UserEditUrl">Edit account</a>
            </p>
        </td>
    </tr>
    <tr>
        <td>
            <p style="color: #435058; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px;">
                The address that needs to be confirmed is: <a href="mailto:@Model.Email">@Model.Email</a>.
            </p>
        </td>
    </tr>
    <tr>
        <td>
            <p style="color: #435058; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px;">
                You're receiving this message as the administrator for @Model.ApplicationName, because a user just created a new account.<br/>
                In case of a confirmation - the user will be notified automatically about the confirmation.<br />
                In case you don't want to confirm the account - please inform the user by mail.
            </p>
        </td>
    </tr>
    <tr>
        <td>
            <p style="color: #435058; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px;">
                Thank you. Your team from @Model.ApplicationName.
            </p>
        </td>
    </tr>
</table>
<p style="color: #435058; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 11px; text-align: center;">
    &copy; @Model.ApplicationName<br/><a href="@Model.ApplicationUrl" target="_blank">@Model.ApplicationUrlDisplay</a>
</p>
</body>
</html>