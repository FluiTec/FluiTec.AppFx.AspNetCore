@model IEnumerable<FluiTec.AppFx.Identity.Entities.IdentityUserEntity>
@using FluiTec.AppFx.AspNetCore
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>User management</h2>
    </header>
    <div class="container">
        <section>
            <h4>Manage users</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Mail</th>
                    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.UsersUpdate)).Succeeded)
                    {
                        <th>#</th>
                    }
                    </tr>
                </thead>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.Name
                        </td>
                        <td>
                            @user.Email
                        </td>
                        @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.UsersUpdate)).Succeeded)
                        {
                            <a asp-controller="Admin" asp-action="ManageUser" asp-route-userid="@user.Id">Edit</a>
                        }
                        </td>
                    </tr>
                }
            </table>
            <h4>Actions</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</section>