@using FluiTec.AppFx.AspNetCore
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Admin</h2>
    </header>
    <div class="container">
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.UsersAccess)).Succeeded)
    {
    <section>
        <h4>Manage users</h4>
        <div class="row uniform">
            <div class="col-lg-6">
                <ul class="actions">
                    <li>
                        <a asp-controller="Admin" asp-action="ManageUsers">Open user management</a>
                    </li>
                </ul>
            </div>
        </div>
    </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.RolesAccess)).Succeeded)
    {
        <section>
            <h4>Manage roles</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Admin" asp-action="ManageRoles">Open role management</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.ClientsAccess)).Succeeded)
    {
        <section>
            <h4>Manage clients</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageClients">Open client management</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.ScopesAccess)).Succeeded)
    {
        <section>
            <h4>Manage scopes</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageScopes">Open scope management</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.ApiResourcesAccess)).Succeeded)
    {
        <section>
            <h4>Manage api resources</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageApiResources">Open api resource management</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.IdentityResourcesAccess)).Succeeded)
    {
        <section>
            <h4>Manage identity resources</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageIdentityResources">Open identity resource management</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.LocalizationAccess)).Succeeded)
    {
        <section>
            <h4>Manage localizations</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Localization" asp-action="Index">Open localization management</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    </div>
</section>