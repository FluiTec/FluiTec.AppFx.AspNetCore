@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Admin
@model FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Admin.UserDeleteModel

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Benutzerverwaltung</h2>
    </header>
    <div class="container">
        <section>
            <h4>Benutzer löschen</h4>
            <hr />
            <p>Sind Sie sicher, dass Sie den nachfolgenden Benutzer löschen wollen?</p>
            <form asp-controller="Admin" asp-action="DeleteUser" method="post">
                <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
                <input type="hidden" name="Id" id="Id" value="@Model?.Email" readonly />
                <div class="row uniform">
                    <div class="col-lg-6">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="Email" readonly/>
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <ul class="actions">
                            <li>
                                <input type="submit" value="Ja, ich bin sicher" />
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
            <h4>Aktionen</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Admin" asp-action="ManageUsers">Benutzerverwaltung</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}