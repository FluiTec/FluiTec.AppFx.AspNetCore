@using FluiTec.AppFx.AspNetCore
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Admin</h2>
    </header>
    <div class="container">
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.UsersAccess)).Succeeded)
    {
        <section>
            <h4>Benutzer verwalten</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Admin" asp-action="ManageUsers">Benutzerverwaltung öffnen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.RolesAccess)).Succeeded)
    {
        <section>
            <h4>Rollen verwalten</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Admin" asp-action="ManageRoles">Rollenverwaltung öffnen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.ClientsAccess)).Succeeded)
    {
        <section>
            <h4>Klienten verwalten</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageClients">Klientenverwaltung öffnen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.ScopesAccess)).Succeeded)
    {
        <section>
            <h4>Aufgabenbereiche verwalten</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageScopes">Aufgabenbereichsverwaltung öffnen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.ApiResourcesAccess)).Succeeded)
    {
        <section>
            <h4>API-Ressourcen verwalten</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageApiResources">API-Ressourcenverwaltung öffnen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.IdentityResourcesAccess)).Succeeded)
    {
        <section>
            <h4>Identitäts-Ressourcen verwalten</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageIdentityResources">Identitäts-Ressourcenverwaltung öffnen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.LocalizationAccess)).Succeeded)
    {
        <section>
            <h4>Lokalisierungen verwalten</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Localization" asp-action="Index">Lokalisierungsverwaltung öffnen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    }
    </div>
</section>