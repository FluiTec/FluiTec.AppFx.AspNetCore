@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Admin
@model FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Admin.RoleAddModel

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Role management</h2>
    </header>
    <div class="container">
        <section>
            <h4>Add role</h4>
            <hr />
            <form asp-controller="Admin" asp-action="AddRole" method="post">
                <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Name" placeholder="Name" data-rule-required="true" data-msg-required="Name is required" />
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Description" placeholder="Description" data-rule-required="true" data-msg-required="Description is required" />
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <ul class="actions">
                            <li>
                                <input type="submit" value="Add" />
                            </li>
                            <li>
                                <input type="reset" value="Reset" />
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
            <h4>Actions</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Admin" asp-action="ManageRoles">Role management</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}