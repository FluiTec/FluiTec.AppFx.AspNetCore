@using FluiTec.AppFx.Identity.Models.AccountViewModels
@model FluiTec.AppFx.Identity.Models.AccountViewModels.ForgotPasswordViewModel

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Forgot your password?</h2>
    </header>
    <!--Content-->
    <div class="container">
        <section>
            <h4>Recover your password</h4>
            <hr/>
            <form asp-controller="Account" asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Email" placeholder="Mail" data-rule-required="true" data-msg-required="Mail is required"/>
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <recaptcha/>
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <ul class="actions">
                            <li>
                                <input type="submit" value="Submit"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}