@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.IdentityAdmin
@model FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.IdentityAdmin.ScopeDeleteModel

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Scope management</h2>
    </header>
    <div class="container">
        <section>
            <h4>Delete scope</h4>
            <hr />
            <form asp-controller="IdentityAdmin" asp-action="DeleteScope" method="post">
                <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
                <input asp-for="Id" value="@Model.Id" hidden />
                <p>Are you sure you want to delete the scope?</p>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <ul class="actions">
                            <li>
                                <input type="submit" value="Yes, i am" />
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
            <h4>Actions</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageScopes">Scope management</a>
                        </li>
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageScope" asp-route-scopeid="@Model.Id">Manage scope</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}