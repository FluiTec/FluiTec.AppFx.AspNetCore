@using FluiTec.AppFx.AspNetCore
@using FluiTec.AppFx.AspNetCore.Configuration
@using Microsoft.AspNetCore.Authorization
@model FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.IdentityAdmin.ResourceClaimsModel
@inject IdentityServerClaimOptions IdentityServerOptions
@inject IViewLocalizer Localizer
@inject IAuthorizationService AuthorizationService

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Identitätsressourcen Eigenschaftsverwaltung</h2>
    </header>
    <div class="container">
        <section>
            <h4>Eigenschaften verwalten</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
            <input asp-for="ResourceId" hidden />
            <br />
            <table class="table">
                <thead>
                    <tr>
                        <th>Typ</th>
                        <th>#</th>
                    </tr>
                </thead>
                @foreach (var claim in Model.ClaimEntries)
                {
                    <tr>
                        @{
                            var defaultClaimType = IdentityServerOptions.DefaultClaimTypes.SingleOrDefault(c => c.Name == claim.Type);
                            if (defaultClaimType != null)
                            {
                                <td>@Localizer.GetString(defaultClaimType.DisplayName)</td>
                            }
                            else
                            {
                                <td>@claim.Type</td>
                            }
                        }
                        <td>
                            @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.IdentityResourceClaimsUpdate)).Succeeded)
                            {
                                <a asp-controller="IdentityAdmin" asp-action="EditIdentityResourceClaim" asp-route-resourceid="@Model.ResourceId" asp-route-claimtype="@claim.Type">Bearbeiten</a>
                            }
                        </td>
                    </tr>
                }
            </table>
            <h4>Aktionen</h4>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageIdentityResources">Identitäts-Ressourcenverwaltung</a>
                        </li>
                        <li>
                            <a asp-controller="IdentityAdmin" asp-action="ManageIdentityResource" asp-route-resourceid="@Model.ResourceId">Ressource verwalten</a>
                        </li>
                        @if ((await AuthorizationService.AuthorizeAsync(User, PolicyNames.IdentityResourceClaimsCreate)).Succeeded)
                        {
                            <li>
                                <a asp-controller="IdentityAdmin" asp-action="AddIdentityResourceClaim" asp-route-resourceid="@Model.ResourceId">Eigenschaft hinzufügen</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}