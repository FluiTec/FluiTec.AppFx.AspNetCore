@using FluiTec.AppFx.Identity.Models.ManageViewModels
@model FluiTec.AppFx.Identity.Models.ManageViewModels.ChangePasswordViewModel

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Password</h2>
    </header>
    <!--Content-->
    <div class="container">
        <section>
            <h4>Change password</h4>
            <hr/>
            <form asp-controller="Profile" asp-action="ChangePassword" method="post">
                <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="OldPassword" placeholder="Old password" data-rule-required="true" data-msg-required="Old password is required"/>
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="NewPassword" placeholder="New password" data-rule-required="true" data-msg-required="New password is required"/>
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="ConfirmPassword" placeholder="Password confirmation" data-rule-required="true" data-msg-required="Password confirmation is required"/>
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <ul class="actions">
                            <li>
                                <input type="submit" value="Submit"/>
                            </li>
                            <li>
                                <input type="reset" value="Reset"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}