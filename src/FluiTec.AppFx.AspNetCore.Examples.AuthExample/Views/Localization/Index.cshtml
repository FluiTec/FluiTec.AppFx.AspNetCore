@model FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.PageableModel<FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Localization.ResourceGroupModel>

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Localization</h2>
    </header>
    <!--Content-->
    <div class="container">
        <section>
            <h3>Resource groups</h3>
            @Html.Partial("_PageNavigation", Model)
            @if (Model != null && Model.Items.Any())
            {
                <ul class="list-group">
                @foreach (var group in Model.Items)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center text-truncate">
                        <a asp-action="Group" asp-route-groupkey="@group.Name">@group.Name</a>
                        <span class="badge badge-primary badge-pill">@group.Entries</span>
                    </li>
                }
                </ul>
            }
            else
            {
                <p>No localizations available.</p>
            }
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <a asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</section>