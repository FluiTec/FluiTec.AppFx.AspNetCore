{
  // logging
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "Enrich": ["FromLogContext"],
    "WriteTo": [
      {
        "Name": "RollingFileAlternate",
        "Args": {
          "logDirectory": ".\\logs",
          "fileSizeLimitBytes": 1048576,
          "buffered": "true"
        }
      }
    ]
  },
  // statuscode
  "StatusCode": {
    "SelfHandledCodes": [
      404
    ]
  },
  // error
  "Error": {
    "ErrorRecipient": "" // environment
  },
  // data
  "Dapper": {
    "ConnectionString": "" // secret
  },
  // api
  "Api": {
    "ApiOnlyPath": "/api"
  },
  // admin
  "Admin": {
    "ConfirmationRecipient": "User", // Admin|User
    "AdminConfirmationRecipient": "" // secret
  },
  // identity
  "IdentityOptions": {
    "Provider": "MSSQL"
  },
  // identityServer
  "IdentityServerOptions": {
    "Provider": "MSSQL"
  },
  "Signing": {
    "RolloverDays": "60",
    "ValidationValidDays": "120"
  },
  // authorization
  "ActivityAuthorizationOptions": {
    "Provider": "MSSQL"
  },
  // localization
  "DbLocalizationOptions": {
    "Provider": "MSSQL"
  },
  "Localization": {
    "DefaultCulture": "en",
    "SupportedCultures": [
      "en"
    ]
  },
  // mail
  "MailOptions": {
    "SmtpServer": "", // secret
    "SmtpPort": "25",
    "EnableSsl": "false",
    "Username": "", // secret
    "Password": "", // secret
    "FromMail": "", // secret
    "FromName": "ApplicationName"
  },
  // staticFile
  "StaticFiles": {
    "CacheDuration": "29030400" // 2 weeks
  }
}